@model string[]

<div class="dashboard-header">
    <nav class="navbar navbar-expand-lg bg-white mb-4 fixed-top">
        <a class="navbar-brand" href="Game/Index">GAME STORE</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto navbar-right-top">

                <li class="nav-item">
                    <div class="container-lg" style="margin-top:10px;">
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-warning" })
                        <select name="sort" id="sort" onchange="makeSort(event)" class="form-control custom" style="width:100px; margin-top:2px; margin-left:0px">
                            @foreach (var item in Model)
                            {
                                <option>@item</option>
                            }
                        </select>
                    </div>
                </li>

                <li class="nav-item">
                    <div id="custom-search" class="top-search-bar" style="padding-left:5px">
                        <input class="form-control" type="text" placeholder="Search.." onkeypress="runSearch(event)" id="searchInput" name="searchInput">
                    </div>
                </li>

                <li class="nav-item">
                    <div id="cart" style="margin-top:10px">
                        <a href="Cart/CheckOut" class="btn btn-warning">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                            </svg>
                            <span class="badge badge-light" id="cartCounter">
                                0
                            </span>
                        </a>
                    </div>
                </li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown nav-user">
                        <a class="nav-link nav-user-img" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="assets/images/avatar-1.jpg" alt="" class="user-avatar-md rounded-circle"></a>
                        <div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
                            <div class="nav-user-info">
                                <h5 class="mb-0 text-white nav-user-name">@User.Identity.Name</h5>
                                <span class="status"></span><span class="ml-2">Available</span>
                            </div>
                            <a class="dropdown-item" href="/Auth/Account/"><i class="fas fa-user mr-2"></i>Account</a>
                            <a class="dropdown-item" href="#"><i class="fas fa-cog mr-2"></i>Setting</a>
                            <a class="dropdown-item" href="/Auth/Logout/"><i class="fas fa-power-off mr-2"></i>Logout</a>
                        </div>
                    </li>
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Auth", null, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Register", "Register", "Auth", null, new { @class = "btn btn-warning" })
                }
            </ul>
        </div>
    </nav>
</div>
